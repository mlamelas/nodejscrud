extends ../layout

block content
    h1.
         #{title}
    ul
        - each historicData, i in historicDatas
            li
                = historicData.group_id
                = historicData.actual_instance_type
                = historicData.actual_cost
                = historicData.actual_aws_zone
				= historicData.start_date
				= historicData.end_date
				= historicData.savings
				= historicData._id
                form(action='/historicData/#{historicData._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                    input(type='hidden',value='DELETE',name='_method')
                    button(type='submit').
                        Delete
                p 
                    a(href='/historicData/#{historicData._id}/edit') Edit
                p
                    a(href='/historicData/#{historicData._id}') Show
