extends ../layout

block content
    h1.
        HistoricData ID #{historicData._id}
    form(action='/historicData/#{historicData._id}/edit',method='post',name='updatehistoricData',enctype='application/x-www-form-urlencoded')
         p Group ID: 
            input#inputGroup_id(type="text", value='#{historicData.group_id}', name="group_id")
		p Actual Instance Type: 
            input#inputActual_instance_type(type="text", value='#{historicData.actual_instance_type}', name="actual_instance_type")
		p Actual Cost: 
            input#inputActual_cost Type(type="text", value='#{historicData.actual_cost}', name="actual_cost")
		p Actual AWS Zone: 
            input#inputActual_aws_zone Type(type="text", value='#{historicData.actual_aws_zone}', name="actual_aws_zone")
		p Start Date: 
            input#inputStart_date Type(type="date", value='#{historicDatadsd}', name="start_date")
		p End Date: 
            input#inputEnd_date Type(type="date", value='#{historicDataded}', name="end_date")
		p Savings: 
            input#inputSavings Type(type="text", value='#{historicData.savings}', name="savings")
	    p 
            input(type='hidden',value='PUT',name='_method')
        p 
            button#btnSubmit(type='submit').
                Update
